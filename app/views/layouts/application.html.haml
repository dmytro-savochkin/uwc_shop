!!!
%html{:lang => 'ru'}
  %head
    = javascript_include_tag :application
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "UWC 1+"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar
      .navbar-inner
        .container-fluid
          .row-fluid
            %h1
              = yield :title


    .container-fluid
      .row-fluid
        .span4
          = yield :menu

        .span8
          .well
            %h4
              - if flash[:success]
                #notice.message.text-success
                  = flash[:success]
                  = flash[:notice]
              - if flash[:error] or flash[:alert]
                #error.message.text-error.underlined
                  = flash[:error]
                  = flash[:alert]
              - elsif flash[:warning]
                #warning.message= flash[:warning]

            %div
              = yield



